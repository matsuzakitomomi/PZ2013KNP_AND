<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/belka" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="@string/user_panel_report_problem"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <ScrollView
    android:id="@+id/hsv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Tytuł usterki: " />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/zglaszanie_dodaj_tytul"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="italic"
                android:text="Dziura w jezdni się zrobiła ogromna, czy ktoś na to zareaguje" 
                android:singleLine="true"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/zglaszanie_dodaj_tytul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@android:drawable/ic_input_add" />

        </RelativeLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Opis usterki: " />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/zglaszanie_dodaj_opis"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="italic"
                android:text="Idę sobie z browarkiem, a tu pyk i jestem w dziurze. Po pachy ogromna. Nie wiem co mam zrobić, więc czekam" 
                android:singleLine="true"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/zglaszanie_dodaj_opis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@android:drawable/ic_input_add" />

        </RelativeLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Typ usterki: " />
        
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/zglaszanie_dodaj_typ"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="italic"
                android:text="Infrastruktura" 
                android:singleLine="true"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/zglaszanie_dodaj_typ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@android:drawable/ic_input_add" />

        </RelativeLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Zdjęcie usterki: " />        
         
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/zglaszanie_dodaj_typ"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="italic"
                android:text="dscn1299.jpg" 
                android:singleLine="true"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/zglaszanie_dodaj_zdjecie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@android:drawable/ic_input_add" />

        </RelativeLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Lokalizacja usterki: " />   
            
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <com.google.android.maps.MapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:apiKey="@string/googlemapapikey"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/mapview"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" >

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Typ mapy" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Moja lokalizacja" />

                </LinearLayout>

       </RelativeLayout>
        
    </LinearLayout>

</ScrollView>
    
</LinearLayout>